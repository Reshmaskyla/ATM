<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet definitions -->
    <servlet>
        <servlet-name>AtmServlet</servlet-name>
        <servlet-class>com.example.atm.AtmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AtmServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ValidatePinServlet</servlet-name>
        <servlet-class>com.example.atm.ValidatePinServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidatePinServlet</servlet-name>
        <url-pattern>/validate-pin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BalanceServlet</servlet-name>
        <servlet-class>com.example.atm.BalanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BalanceServlet</servlet-name>
        <url-pattern>/balance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>com.example.atm.WithdrawServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/withdraw</url-pattern>
    </servlet-mapping>

</web-app>
